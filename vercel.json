{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "prisma generate && next build",
  "redirects": [
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "www.spike.land"
        }
      ],
      "destination": "https://spike.land/:path*",
      "permanent": true
    }
  ],
  "crons": [
    {
      "path": "/api/cron/cleanup-jobs",
      "schedule": "*/15 * * * *"
    }
  ]
}
