  type       IdentifierType
  value      String
  createdAt  DateTime       @default(now())
  identity   Identity       @relation(fields: [identityId], references: [id], onDelete: Cascade)

  @@unique([type, value])
  @@index([identityId])
  @@map("identifiers")
}

// Enum for different identifier types
enum IdentifierType {
  VISITOR_ID
  USER_ID
  EMAIL
}
