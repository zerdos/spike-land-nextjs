{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": [
      "ES2020",
      "dom"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": [
      "node",
      "@cucumber/cucumber",
      "@playwright/test"
    ]
  },
  "include": [
    "e2e/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
