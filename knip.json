{
  "$schema": "https://unpkg.com/knip@latest/schema.json",
  "workspaces": {
    ".": {
      "entry": [
        "src/app/**/page.tsx",
        "src/app/**/layout.tsx",
        "src/app/**/route.ts",
        "src/app/**/loading.tsx",
        "src/app/**/error.tsx",
        "src/app/**/opengraph-image.tsx",
        "src/auth.ts",
        "src/auth.config.ts",
        "src/workflows/*.workflow.ts",
        "apps/**/*.tsx"
      ],
      "project": ["src/**/*.{ts,tsx}", "apps/**/*.{ts,tsx}"],
      "ignore": [
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*.d.ts",
        "**/*.example.tsx",
        "src/test-utils/**",
        "e2e/**",
        "prisma/**",
        "scripts/**",
        "packages/mcp-server/dist/**"
      ],
      "ignoreBinaries": ["outdated"],
      "ignoreDependencies": [
        "@types/*",
        "@next/eslint-plugin-next",
        "eslint-plugin-jsx-a11y",
        "eslint-plugin-react",
        "eslint-plugin-react-hooks",
        "typescript-eslint",
        "eslint-config-next"
      ],
      "paths": {
        "@/*": ["./src/*"],
        "@apps/*": ["./apps/*"]
      }
    },
    "packages/mobile-app": {
      "entry": [
        "app/**/*.tsx",
        "app.json"
      ],
      "project": ["**/*.{ts,tsx}"],
      "ignore": [
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*.web.ts",
        "__mocks__/**"
      ],
      "ignoreDependencies": [
        "zod"
      ]
    },
    "packages/shared": {
      "project": ["src/**/*.ts"],
      "ignore": ["dist/**"]
    }
  }
}
