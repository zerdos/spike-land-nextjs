{
  "mcpServers": {
    "spike-land-dev": {
      "type": "streamable-http",
      "url": "http://localhost:3000/api/mcp"
    },
    "playwright": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@playwright/mcp@latest"
      ]
    },
    "sentry-mcp": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@sentry/mcp-server"],
      "env": {
        "SENTRY_ACCESS_TOKEN": "${SENTRY_AUTH_TOKEN}"
      }
    }
  }
}
