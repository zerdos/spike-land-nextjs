{
  "mcpServers": {
    "playwright": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@playwright/mcp@latest"
      ]
    },
    "spike-land": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@spike-npm-land/mcp-server"
      ],
      "env": {
        "SPIKE_LAND_API_KEY": "${SPIKE_LAND_API_KEY}",
        "BRIDGEMIND_MCP_URL": "${BRIDGEMIND_MCP_URL}",
        "BRIDGEMIND_API_KEY": "${BRIDGEMIND_API_KEY}",
        "GH_PAT_TOKEN": "${GH_PAT_TOKEN}",
        "GITHUB_PROJECT_ID": "${GITHUB_PROJECT_ID}",
        "GITHUB_OWNER": "${GITHUB_OWNER}",
        "GITHUB_REPO": "${GITHUB_REPO}"
      }
    },
    "gmail": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@gongrzhe/server-gmail-autoauth-mcp"
      ]
    },
    "sentry": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@sentry/mcp-server"],
      "env": {
        "SENTRY_AUTH_TOKEN": "${SENTRY_AUTH_TOKEN}"
      }
    }
  }
}
