{
  "mcpServers": {
    "spike-land-dev": {
      "type": "url",
      "url": "http://localhost:3000/api/mcp"
    },
    "vitest": {
      "type": "stdio",
      "command": "yarn",
      "args": ["vitest-mcp"]
    },
    "playwright": {
      "type": "stdio",
      "command": "yarn",
      "args": ["@playwright/mcp"]
    },
    "sentry-mcp": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@sentry/mcp-server"],
      "env": {
        "SENTRY_ACCESS_TOKEN": "${SENTRY_MCP_AUTH_TOKEN}"
      }
    }
  }
}
