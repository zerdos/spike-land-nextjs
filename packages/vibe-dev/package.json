{
  "name": "@spike-npm-land/vibe-dev",
  "version": "0.1.0",
  "description": "Lightweight Docker-based development workflow for vibe-coded apps",
  "type": "module",
  "main": "dist/cli.js",
  "bin": "./dist/cli.js",
  "scripts": {
    "build": "tsup src/cli.ts --format esm --dts",
    "dev": "tsx src/cli.ts",
    "dev:watch": "tsx watch src/cli.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "chokidar": "5.0.0",
    "commander": "14.0.3"
  },
  "devDependencies": {
    "@types/node": "25.2.2",
    "tsup": "8.5.1",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
