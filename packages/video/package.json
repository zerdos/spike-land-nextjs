{
  "name": "@spike-npm-land/video",
  "version": "1.0.0",
  "private": true,
  "description": "Promotional video for spike.land using Remotion",
  "scripts": {
    "dev": "remotion studio",
    "render:promo": "remotion render PromoVideo out/promo.mp4",
    "render:bridgemind": "remotion render BridgeMindPromo out/bridgemind-16x9.mp4 --codec h264 --crf 18",
    "render:bridgemind:portrait": "remotion render BridgeMindPromo-Vertical out/bridgemind-9x16.mp4",
    "render:bridgemind:square": "remotion render BridgeMindPromo-Square out/bridgemind-1x1.mp4",
    "render:bridgemind:all": "npm run render:bridgemind && npm run render:bridgemind:portrait && npm run render:bridgemind:square",
    "render:youtube": "remotion render PhysicsOfAttention out/physics-of-attention.mp4",
    "build:gif": "remotion render PromoVideo out/promo.gif --image-format png",
    "upgrade": "remotion upgrade",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@remotion/bundler": "4.0.420",
    "@remotion/cli": "4.0.420",
    "@remotion/media": "4.0.420",
    "@remotion/transitions": "4.0.420",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "remotion": "4.0.420",
    "zod": "3.25.76"
  },
  "devDependencies": {
    "@remotion/eslint-config": "4.0.420",
    "@remotion/tailwind": "4.0.420",
    "@types/react": "19.2.13",
    "@types/react-dom": "19.2.3",
    "autoprefixer": "10.4.24",
    "eslint": "10.0.0",
    "postcss": "8.5.6",
    "tailwindcss": "4.1.18",
    "typescript": "5.9.3"
  }
}
